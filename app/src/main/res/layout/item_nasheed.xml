<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_frame"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/n_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/nasheed_player"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/n_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Shukran ya rab"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_frame"
        app:layout_constraintTop_toTopOf="@id/image_frame"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/n_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Unknown"
        android:textColor="@color/white_50"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/n_name"
        app:layout_constraintTop_toBottomOf="@id/n_name"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/n_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_regular"
        android:text="4:49"
        android:textColor="@color/white_50"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/n_author"
        app:layout_constraintTop_toBottomOf="@id/n_author"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_circle_play"
        app:layout_constraintBottom_toBottomOf="@id/image_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_frame" />


</androidx.constraintlayout.widget.ConstraintLayout>